<div class="posts">
  {{#each everyPost}}
    <article class="card">
      <header class="card-header flex-row justify-space-between">
        <h2 class="card-header-title">
          <a href="post/{{id}}">{{title}}</a>
        </h2>
        <div class="card-header-item">
          Posted by {{User.username}} on {{format_date createdAt}}
        </div>
      </header>
      <div class="card-content">
        <div class="content">
          {{body}}
        </div>
      </div>
    </article>
  {{/each}}
</div>