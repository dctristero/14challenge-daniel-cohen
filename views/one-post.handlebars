<div class="post">
  <article class="card">
    <header class="card-header flex-row justify-space-between">
      <h2>{{blogPost.title}}</h2>
      <div>
        Posted by {{blogPost.user.username}} on 
        {{!-- {{format_date blogPost.createdAt}} --}}
      </div>
    </header>
    <div class="card-content">
      <div class="content">
        {{blogPost.body}}
      </div>
    </div>
  </article>

  {{#if blogPost.comments}}
    <section class="card">
      <header class="card-header">
        <h3>Comments</h3>
      </header>

      <div class="card-content">
        {{#each blogPost.comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
             {{User.username}}, {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <header class="card-header">
      <h3>Add New Comment</h3>
    </header>

    <div class="card-content">
      <input type="hidden" id="post-id" name="post-id" value="{{blogPost.id}}" />

      <div class="field">
        <label class="label" for="comment-body">Comment</label>
        <div class="control">
          <input id="comment-body" name="comment-body" class="textarea"></input>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <button type="submit" class="button main-color">Submit</button>
        </div>
      </div>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>